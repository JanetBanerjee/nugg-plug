<% @store.in_groups_of(4, false).each do |group| %>
  <div class='row'>
    <% group.each do |p| %>
      <div class='col-md-3'>
        <p>
          <% if p.thumb.url %>
            <%= image_tag p.thumb.url %>
          <% end %>
        </p>
        <h3 class="text-center">
          <%= link_to p.name, stores_path(p) %>
        </h3>
        <p class="text-center">
          <%= p.city %>, <%= p.state %>
        </p>
        <p class="text-center">
          <%= p.description %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>