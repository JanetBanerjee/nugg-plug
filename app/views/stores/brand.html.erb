<% @store.in_groups_of(4, false).each do |group| %>
  <div class='row'>
    <% group.each do |p| %>
      <div class='col-md-3'>
        <p>
          thumbnail placeholder
        </p>
        <h3 class="text-center">
          <%= p.name %>
        </h3>
        <p class="text-center">
          <%= p.city %>, <%= p.state %>
        </p>
        <p class="text-center">
          <%= p.description %>
        </p>

      </div>
    <% end %>
  </div>
<% end %>