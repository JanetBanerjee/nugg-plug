<%= simple_form_for(@store, html: { class: 'form-inline' }) do |f| %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <form role="form">
        <div class="form-group">
          <%= f.input :name %>
        </div>
        <div class="form-group">
          <%= f.input :address %>
          <%= f.input :city %>
          <%= f.input :state %>
          <%= f.input :zip %>
        </div>
        <div class="form-group">
          <%= f.input :area_code %>
          <%= f.input :phone_1 %>
          <%= f.input :phone_2 %>
        </div>
        <div class="form-group">
          <%= f.input :description %>
        </div>
        <div class="form-group">
          <%= f.input :image %>
        </div>
        <h2>
          Store Hours
        </h2>
        <form role="form" class="form-inline">
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :mon_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :mon_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :mon_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :mon_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :mon_closed %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :tues_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :tues_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :tues_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :tues_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :tues_closed %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :wed_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :wed_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :wed_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :wed_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :wed_closed %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :thurs_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :thurs_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :thurs_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :thurs_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :thurs_closed %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :fri_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :fri_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :fri_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :fri_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :fri_closed %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :sat_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :sat_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :sat_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :sat_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :sat_closed %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-group form-hours">
              <%= f.label :sun_open, class: "col-sm-2 control-label" %>
              <%= f.time_select :sun_open, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="form-group form-hours">
              <%= f.label :sun_end, class: "col-sm-2 control-label" %>
              <%= f.time_select :sun_end, {minute_step: 30}, class: "form-control date" %>
            </div>
            <div class="checkbox form-hours">
              <%= f.input :sun_closed %>
            </div>
          </div>
        </form>
        <button type="submit" class="btn btn-primary">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
<% end %>