<%= simple_form_for(@item, html: { class: 'form-inline' }) do |f|%>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <form role="form">
          <div class="form-group">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>

            <%= f.submit %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>