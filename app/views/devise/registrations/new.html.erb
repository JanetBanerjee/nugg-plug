<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>

  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>

  <%= f.text_field :city, autofocus: true, autocomplete: "city" %>

  <%= f.text_field :state, autofocus: true, autocomplete: "state" %>

  <%= f.text_field :country, autofocus: true, autocomplete: "country" %>

  <%= f.phone_field :area_code, autofocus: true, autocomplete: "phone" %>

  <%= f.phone_field :phone_1, autofocus: true, autocomplete: "phone" %>

  <%= f.phone_field :phone_2, autofocus: true, autocomplete: "phone" %>

  <%= f.select :user_type, options_for_select(['admin', 'vendor', 'user']) %>

  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>

  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

  <%= f.submit "Sign up" %>

<% end %>

<%= render "devise/shared/links" %>
