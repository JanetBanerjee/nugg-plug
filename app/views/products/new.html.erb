<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <form role="form">
        <div class="form-group">
          <%= simple_form_for @item do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>

            <%= f.submit %>
          <% end %>
        </div>
      </form>
    </div>
  </div>
</div>